<%- include('partials/head') %>
<body>
    <div class="row">
        <div class="col s6 offset-s3">
          <div class="card">

            <span class="card-title center-align"><h4><strong>Log In</strong></h4></span>

            <form action="/user/login" method="post">
                <!-- Email input -->
                <div class="row">
                    <div class="input-field col s10 offset-s1">
                      <input id="email" name="email" type="email" class="validate">
                      <label for="email">Email</label>
                    </div>
                </div>
                <!-- Password input -->
                <div class="row">
                    <div class="input-field col s10 offset-s1"> 
                      <input id="password" name="password" type="password" class="validate">
                      <label for="password">Password</label>
                    </div>
                </div>
                <!-- Submit button -->
                <div class="row">
                  <div class="card-action col s12 ">
                    <button class="btn waves-effect waves-light center-align" type="submit">Log In</button>
                    <a class="col offset-s2" href="/user/register">Doesn't have account?</a>  
                  </div>
              </div>    
          </form>

          </div>
        </div>
    </div>
</body>
</html>
